<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
    body{background-color:  #f1f1f1;}
    .navbar-inverse {
      background-color: #ffffff;
      border-color: black;
      height: 89px;
    }
    .navbar-inverse .navbar-nav > li > a {
      color: #000000;
      padding-top: 32px;
    }
    .navbar-inverse .navbar-nav > li > a:hover,
    .navbar-inverse .navbar-nav > li > a:focus {
      color: #041973;
    }
    .navbar-inverse .navbar-nav > li > .dropdown-menu {
      background-color: #ffffff;
    }
    .navbar-inverse .navbar-nav > li > .dropdown-menu > li > a {
      color: #000000;
    }
    .navbar-inverse .navbar-nav > li > .dropdown-menu > li > a:hover,
    .navbar-inverse .navbar-nav > li > .dropdown-menu > li > a:focus {
      color: #041973;
      background-color: #ffffff;
    }
    .navbar-inverse .navbar-nav > li > .dropdown-menu > li.divider {
      background-color: #ffffff;
    }
    .navbar-inverse .navbar-nav .open .dropdown-menu > .active > a,
    .navbar-inverse .navbar-nav .open .dropdown-menu > .active > a:hover,
    .navbar-inverse .navbar-nav .open .dropdown-menu > .active > a:focus {
      color: #000000;
      background-color: #ffffff;
    }
    .navbar-inverse .navbar-nav > .active > a,
    .navbar-inverse .navbar-nav > .active > a:hover,
    .navbar-inverse .navbar-nav > .active > a:focus {
      color: #000000;
      background-color: #ffffff;
    }
    .navbar-inverse .navbar-nav > .open > a,
    .navbar-inverse .navbar-nav > .open > a:hover,
    .navbar-inverse .navbar-nav > .open > a:focus {
      color: #000000;
      background-color: #ffffff;
    }
    .navbar-inverse .navbar-toggle {
      border-color: #ffffff;
    }
    .navbar-inverse .navbar-toggle:hover,
    .navbar-inverse .navbar-toggle:focus {
      background-color: #ffffff;
    }
    .navbar-inverse .navbar-toggle .icon-bar {
      background-color: #000000;
    }
    .navbar-inverse .navbar-collapse,
    .navbar-inverse .navbar-form {
      border-color: #000000;
    }
    .navbar-inverse .navbar-link {
      color: #000000;
    }
    .navbar-inverse .navbar-link:hover {
      color: #000000;
    }
    @media (max-width: 767px) {
      .navbar-inverse .navbar-nav .open .dropdown-menu > li > a {
        color: #041973;
      }
      .navbar-inverse .navbar-nav .open .dropdown-menu > li > a:hover,
      .navbar-inverse .navbar-nav .open .dropdown-menu > li > a:focus {
        color: #041973;
      }
      .navbar-inverse .navbar-nav .open .dropdown-menu > .active > a,
      .navbar-inverse .navbar-nav .open .dropdown-menu > .active > a:hover,
      .navbar-inverse .navbar-nav .open .dropdown-menu > .active > a:focus {
        color: #041973;
        background-color: #ffffff;
      }
    }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand"><%= image_tag "jigsaw.png", alt: "jigsaw" %></a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Gestión de usuarios
            <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Registrar usuario", nuevo_usuario_path%></li>
              <li><%= link_to "Modificar usuario", modificar_usuario_path%></li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav">
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Gestor de componentes
            <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Ingresar hardware", ingresar_hardware_path%></li>
              <li><%= link_to "Modificar hardware", modificar_hardware_path%></li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav">
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Laboratorio
            <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Ingresar hardware a reparar", ingreso_hardware_reparar_path%></li>
              <li><%= link_to "Gestor de reparación", gestor_reparacion_path%></li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav">
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Reportabilidad
            <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Hardware", hardware_path%></li>
              <li><%= link_to "Instalaciones", instalacion_path%></li>
              <li><%= link_to "Reparaciones", reparacion_path%></li>
              <li><%= link_to "Cambios de componentes", cambio_componente_path%></li>
              <li><%= link_to "Historial de componentes", historial_componente_path%></li>
              <li><%= link_to "Respuestos utilizados", respuesto_utilizado_path%></li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Usuario:<%= %>
            <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil de usuario", principal_path %></li>
              <li><%= link_to "cerrar sesión", principal_path %></li>
            </ul>
          </li>
        </ul>

      </div>
    </div>
  </nav>
  <%= yield %>
  </body>
</html>
